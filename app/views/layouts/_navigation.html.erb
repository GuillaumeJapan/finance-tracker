<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container">
    <%= link_to "FinanceTracker", root_path, class: "navbar-brand" %> 
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <% if user_signed_in? %>
        <ul class="navbar-nav mr-auto">
          <li class="nav-item <%= 'active' if request.path == my_portfolio_path %> ">
            <%= link_to "My portfolio", my_portfolio_path, class: "nav-link" %>
          </li>
          <li class="nav-item <%= 'active' if request.path == my_friends_path %> ">
            <%= link_to "My friends", my_friends_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= form_with url: search_stock_path, class: "form-inline my-2 my-lg-0", local: false, method: :get do |form| %>
              <%= form.text_field :stock, placeholder: "Stock ticker symbol", class: "form-control", autocomplete: "off" %> 
              <%= form.submit "Search", class: "btn btn-outline-success" %>
            <% end %>
          </li>
        </ul>

        <ul class="navbar-nav ml-auto">
          <li class="nav-item dropdown active">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= fa_icon "user" %> <%= current_user.full_name %>
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <%= link_to edit_user_registration_path, class: "dropdown-item" do %>
                <%= fa_icon "edit" %> Edit my profile
              <% end %>
              <div class="dropdown-divider"></div>
              <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        </ul>
      <% end %>
      
    </div>
  </div>
</nav>
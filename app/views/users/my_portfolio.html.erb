<h1>My portfolio</h1>

<div class="search-area">
  <h3>Search stocks</h3>
  <%= form_with url: search_stock_path, local: false, method: :get do |form| %>
    <div class="form-group row">
      <div class="col-sm-9 no-right-padding">
        <%= form.text_field :stock, placeholder: "Stock ticker symbol", autofocus: true, class: "form-control form-control-lg", autocomplete: "off" %>        
      </div>
      <div class="col-sm-3 no-left-padding">
        <%= button_tag class: "btn btn-success", data: { disable_with: "<i class='fa fa-circle-o-notch fa-spin fa-2x'></i>".html_safe } do %>
          <%= fa_icon "search 2x" %>
        <% end %> 
      </div>
    </div>
  <% end %>
</div>

<!-- For JS results -->
<div id="results">
</div>

<%= render 'stocks/list' %>